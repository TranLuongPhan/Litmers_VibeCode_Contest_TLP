# Database Configuration
# Get these from Supabase Dashboard -> Settings -> Database

# Connection Pooling URL (for application queries)
# Format: postgres://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true&connection_limit=1"

# Direct Connection URL (for migrations)
# Format: postgres://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# NextAuth Configuration
# Generate AUTH_SECRET with: openssl rand -base64 32
AUTH_SECRET="your-generated-secret-here"

# Application URL
# Local development
NEXTAUTH_URL="http://localhost:3000"
# Production (update with your Vercel domain)
# NEXTAUTH_URL="https://your-app.vercel.app"
